<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User filters">

        <EditTextPreference
            app:key="minAge"
            app:title="Minimum Age"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="maxAge"
            app:title="Maximum Age"
            app:defaultValue="100"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:defaultValue="Both"
            app:entries="@array/gender_entries"
            app:entryValues="@array/gender_values"
            app:key="preferredGender"
            app:title="Preferred Gender"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>
