<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        app:cardBackgroundColor="@color/colorCardBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblPosition"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgPlacePhoto"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_margin="1sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblPosition"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Place Name"
                android:layout_marginLeft="10sp"
                app:layout_constraintStart_toEndOf="@+id/imgPlacePhoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblRating"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Rating"
                app:layout_constraintEnd_toEndOf="@+id/lblName"
                app:layout_constraintStart_toStartOf="@+id/lblName"
                app:layout_constraintTop_toBottomOf="@+id/lblName" />

            <TextView
                android:id="@+id/lblNumberOfRatings"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="From X Number of reviews"
                app:layout_constraintEnd_toEndOf="@+id/lblRating"
                app:layout_constraintStart_toStartOf="@+id/lblRating"
                app:layout_constraintTop_toBottomOf="@+id/lblRating" />

            <TextView
                android:id="@+id/lblTypes"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Types"
                app:layout_constraintEnd_toEndOf="@+id/lblNumberOfRatings"
                app:layout_constraintStart_toStartOf="@+id/lblNumberOfRatings"
                app:layout_constraintTop_toBottomOf="@+id/lblNumberOfRatings" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>