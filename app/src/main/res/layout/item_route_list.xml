<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        app:cardBackgroundColor="@color/colorCardBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblCreator"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:text="Creator: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Route Name"
                android:layout_marginTop="3sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblCity"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="City"
                app:layout_constraintEnd_toEndOf="@+id/lblName"
                app:layout_constraintStart_toStartOf="@+id/lblName"
                app:layout_constraintTop_toBottomOf="@+id/lblName" />

            <TextView
                android:id="@+id/lblNumberPlacesOnRoute"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="Number of places on route"
                app:layout_constraintEnd_toEndOf="@+id/lblCity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCity" />

            <TextView
                android:id="@+id/lblPlacesOnRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="Places on Route"
                android:layout_marginBottom="3sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNumberPlacesOnRoute" />

            <TextView
                android:id="@+id/lblRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rating: "
                app:layout_constraintEnd_toEndOf="@+id/lblCreator"
                app:layout_constraintStart_toStartOf="@+id/lblCreator"
                app:layout_constraintTop_toBottomOf="@+id/lblCreator" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>